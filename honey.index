<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Happy Girlfriend's Day ‚ù§Ô∏è</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Georgia', serif;
            background: linear-gradient(45deg, #ff6b9d, #c44569, #f8b500, #ff6b9d);
            background-size: 400% 400%;
            animation: gradientShift 8s ease infinite;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow-x: hidden;
        }

        @keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            padding: 40px;
            max-width: 600px;
            width: 90%;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        .container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255, 182, 193, 0.1), transparent);
            animation: shimmer 3s linear infinite;
        }

        @keyframes shimmer {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }

        .hearts {
            position: absolute;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .heart {
            position: absolute;
            font-size: 20px;
            color: #ff6b9d;
            animation: heartFloat 6s linear infinite;
            opacity: 0.7;
        }

        @keyframes heartFloat {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 0.7;
            }
            90% {
                opacity: 0.7;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        .title {
            font-size: 3em;
            color: #c44569;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            position: relative;
            z-index: 2;
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.05); }
        }

        .photo-frame {
            width: 250px;
            height: 250px;
            border-radius: 50%;
            margin: 30px auto;
            border: 8px solid #ff6b9d;
            overflow: hidden;
            position: relative;
            z-index: 2;
            box-shadow: 0 10px 30px rgba(255, 107, 157, 0.3);
            transition: transform 0.3s ease;
        }



        .photo-placeholder {
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, #ff6b9d, #c44569);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.2em;
            text-align: center;
            padding: 20px;
        }

        .photo {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: none;
        }

        .message {
            font-size: 1.4em;
            color: #444;
            line-height: 1.6;
            margin: 30px 0;
            position: relative;
            z-index: 2;
        }

        .love-quote {
            font-style: italic;
            color: #c44569;
            font-size: 1.1em;
            margin: 20px 0;
            position: relative;
            z-index: 2;
        }

        .buttons {
            margin-top: 30px;
            position: relative;
            z-index: 2;
        }

        .btn {
            background: linear-gradient(45deg, #ff6b9d, #c44569);
            color: white;
            padding: 15px 30px;
            border: none;
            border-radius: 25px;
            font-size: 1.1em;
            cursor: pointer;
            margin: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(255, 107, 157, 0.3);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 107, 157, 0.5);
        }

        .file-input {
            display: none;
        }

        .sparkle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: #f8b500;
            border-radius: 50%;
            animation: sparkle 2s linear infinite;
        }

        @keyframes sparkle {
            0%, 100% { opacity: 0; transform: scale(0); }
            50% { opacity: 1; transform: scale(1); }
        }

        .date {
            position: absolute;
            top: 20px;
            right: 30px;
            color: #c44569;
            font-weight: bold;
            z-index: 2;
        }

        @media (max-width: 768px) {
            .container {
                padding: 30px 20px;
                margin: 20px;
            }
            
            .title {
                font-size: 2.5em;
            }
            
            .photo-frame {
                width: 200px;
                height: 200px;
            }
            
            .message {
                font-size: 1.2em;
            }
        }
    </style>
</head>
<body>
    <div class="hearts"></div>
    
    <div class="container">
        <div class="date">August 1, 2025</div>
        
        <h1 class="title">Happy Girlfriend's Day! üíï</h1>
        
        <div class="photo-frame">
            <img class="photo" src="lalabs.jpg" alt="Your Beautiful Girlfriend" style="display: block;">
        </div>
        
        <div class="message">
            To the most amazing woman in my life,<br>
            <strong>You make every day feel like a celebration! üåü</strong><br>
            Thank you for being my sunshine, my laughter, and my heart.
        </div>
        
        <div class="love-quote">
        Sorry love wakoy flowers na hatag, wala lang jud kuy funds karun, bawi rako sunod love i love youuu!üíñ<br>
        
        </div>
        
        <div class="buttons">
            <button class="btn" onclick="showSurprise()">Click for a Surprise! üéâ</button>
            <button class="btn" onclick="shareMessage()">Share This Love üíå</button>
        </div>
    </div>

    <script>
        // Create floating hearts
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = 'üíñ';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.animationDuration = (Math.random() * 3 + 4) + 's';
            heart.style.fontSize = (Math.random() * 10 + 15) + 'px';
            document.querySelector('.hearts').appendChild(heart);
            
            setTimeout(() => {
                heart.remove();
            }, 7000);
        }

        // Create sparkles
        function createSparkle() {
            const sparkle = document.createElement('div');
            sparkle.classList.add('sparkle');
            sparkle.style.left = Math.random() * 100 + '%';
            sparkle.style.top = Math.random() * 100 + '%';
            sparkle.style.animationDelay = Math.random() * 2 + 's';
            document.querySelector('.container').appendChild(sparkle);
            
            setTimeout(() => {
                sparkle.remove();
            }, 2000);
        }

        // Upload photo function - removed since using hardcoded image

        // Surprise function
        function showSurprise() {
            const surprises = [
                "Sorry na love, i love you kaon ta daebak please libre nako hehe",
                
            ];
            
            const randomSurprise = surprises[Math.floor(Math.random() * surprises.length)];
            
            // Create surprise popup
            const surprise = document.createElement('div');
            surprise.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%) scale(0);
                background: linear-gradient(45deg, #ff6b9d, #c44569);
                color: white;
                padding: 30px;
                border-radius: 20px;
                text-align: center;
                font-size: 1.3em;
                box-shadow: 0 20px 40px rgba(0,0,0,0.3);
                z-index: 1000;
                max-width: 400px;
                animation: popIn 0.5s ease forwards;
            `;
            
            surprise.innerHTML = `
                <div>${randomSurprise}</div>
                <button onclick="this.parentElement.remove()" style="
                    background: rgba(255,255,255,0.2);
                    border: 2px solid white;
                    color: white;
                    padding: 10px 20px;
                    border-radius: 15px;
                    margin-top: 20px;
                    cursor: pointer;
                    font-size: 1em;
                ">Close üíñ</button>
            `;
            
            document.body.appendChild(surprise);
            
            // Create extra hearts for surprise
            for(let i = 0; i < 20; i++) {
                setTimeout(createHeart, i * 100);
            }
        }

        // Share function
        function shareMessage() {
            if (navigator.share) {
                navigator.share({
                    title: 'Happy Girlfriend\'s Day!',
                    text: 'Someone special created this just for me! üíï',
                    url: window.location.href
                });
            } else {
                // Fallback for browsers that don't support Web Share API
                const url = window.location.href;
                navigator.clipboard.writeText(url).then(() => {
                    alert('Link copied to clipboard! Share it with friends! üíï');
                });
            }
        }

        // Add pop-in animation to CSS
        const style = document.createElement('style');
        style.textContent = `
            @keyframes popIn {
                to {
                    transform: translate(-50%, -50%) scale(1);
                }
            }
        `;
        document.head.appendChild(style);

        // Start animations
        setInterval(createHeart, 1000);
        setInterval(createSparkle, 500);

        // Add some initial hearts
        for(let i = 0; i < 5; i++) {
            setTimeout(createHeart, i * 200);
        }
    </script>
</body>
</html>
